<div class="max-w-lg mx-auto mt-16 text-center max-w-sm rounded overflow-hidden shadow-lg p-10"">
<h1 class="font-bold text-4xl text-center text-blue-500">Login In</h1>

<%= form_for :login do |f| %>

  <div class="md:flex md:items-center justify-center mb-6 mt-5 mr-20">
    <div class="md:w-1/3">
      <div class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4">
       <%= f.label :email %>
      </div>
   </div>
    <div class="shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
       <%= f.text_field :email, autofocus: true %>
    </div>
 </div>


 <div class="md:flex md:items-center justify-center mb-6 mt-5 mr-20">
    <div class="md:w-1/3">
      <div class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4">
       <%= f.label :password %>
      </div>
    </div>
    <div class="shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
      <%= f.password_field :password %>
    </div>
</div>

<div class="md:flex md:items-center mt-5 mr-20">
   <div class="md:w-1/3"></div>
    <div class="md:w-2/3">
      <div class="shadow bg-purple-500  focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">
        <%= f.submit "Log In",class: 'bg-purple-500' %>
      </div>
    </div>
</div>

<h1> Don't have an account? </h1>
<%= link_to 'Sign Up', new_user_path, class: 'text-blue' %>

<% end %>

</div>