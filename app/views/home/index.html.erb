<%= render 'shared/header' %>



<main class="py-10 max-w-7xl mx-auto px-4 sm:px-8">
    <% if current_user %>
         <div class="flex justify-between align-center">
              <h1 class="text-3xl"> 
                Welcome, <span class="text-purple-600 font-semibold"><%= current_user.name %><span>
              </h1>
              <%= render 'shared/input/buttons/secondary', color: "purple", label: "Edit", href: edit_url %>
          </div>
    
           <%= render 'shared/profile/preview', profile: current_user.profile %>
          
    <% else %>
      <%= link_to 'Sign Up', new_user_path %>
    <% end %>
    
</main>